<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicWidget" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_100</item>
        <item name="colorPrimaryVariant">@color/main_300</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/appBackgroundColor</item>
        <!-- Customize your theme here. -->
        <item name="widgetBackgroundColor">@color/a2_800</item>
        <item name="widgetTitleColor">@color/white</item>
        <item name="widgetTextColor">@color/n2_100</item>
        <item name="widgetIconsColor">@color/a2_300</item>
        <item name="appBackgroundColor">@color/n1_900</item>
        <item name="appTextColor">@color/n2_300</item>
    </style>
</resources>